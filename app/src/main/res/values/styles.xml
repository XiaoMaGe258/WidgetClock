<resources>

    <!-- Base application theme.   Theme.AppCompat.DayNight-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">#ffffff</item>
    </style>

    <style name="ClockStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <!-- 加个阴影效果. -->
        <item name="android:shadowColor">#333333</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="CustomFont" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/bungee_shade</item>
        <item name="android:fontFamily">@font/bungee_shade</item>
    </style>


</resources>
